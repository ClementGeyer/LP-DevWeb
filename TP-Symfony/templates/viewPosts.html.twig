{% extends 'base.html.twig' %}

{% block body %}
    <div style='display: flex; justify-content: space-around; text-align: center'>
        <div>
            <h1>Posts</h1>
            {% for post in posts %}
                <p><b>{{post.title}}</b> -> {{post.category.title}}</p>
                <hr/>
            {% endfor %}
        </div>
        <div>
            <h1>Categories</h1>
            {% for category in categories %}
                <p>{{category.title}}</p>
                <hr/>
            {% endfor %}
        </div>
    </div>
{% endblock %}