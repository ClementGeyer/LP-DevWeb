{% extends 'base.html.twig' %}

{% block title %}Créer catégorie{% endblock %}

{% block body %}

<h1 class="h3 mb-3 mt-5 text-center font-weight-normal">Créer une catégorie</h1>

<div class="border border-1 col-5 d-flex m-auto flex-column pt-5 pb-5 bg-dark">
    {{form_start(form)}}
    <div class="col-8 d-flex flex-column align-items-center m-auto mb-3">
        <label class="text-white">Nom</label>
        {{form_row(form.name)}} 
    </div>
    <div class="col-12 d-flex">
        <button type="submit" class="btn btn-lg btn-primary m-auto">Ajouter catégorie</button>
    </div>
    {{form_end(form)}}
</div>
{% endblock %}
